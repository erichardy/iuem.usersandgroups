<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="iuem.usersandgroups">
<head>

</head>
<body >

<metal:main fill-slot="main">
<metal:content-core define-macro="main">
<style type="text/css" title="currentStyle">
button.nodisplay {
	display: none;
	}
button.display {
	display: block;
}
</style>

<p tal:content="${request/group}" />
<p tal:content="${request/operation}" />

  <hr />


<script>
function cursor_wait() {
	document.body.style.cursor = 'wait';
}
function cursor_clear() {
	document.body.style.cursor = 'default';
}
function install_group(group, operation){
	console.log(operation + ' of' + group);
	$.post("@@manage-group",
		{
			'group': group,
			'operation': operation
		},
		function(data, status) {
			// alert("Retour: " + data + "\nStatus: " + status);
		}
	);
}

$("td .mgtttt").click(function(){
	var modal = document.getElementById('modal1');
	tr = $(this).parent().parent();
	group = $(this).parent().parent().attr('id');
	td = $(this).parent();
	klass = $(this).attr('class');
	install = $(this).hasClass('install');
	uninstall = $(this).hasClass('uninstall');
	if (install) {
		install_group(group, 'install');
		$('tr#' + group + ' button.uninstall').removeAttr('disabled');
		$(this).attr('disabled', 'disabled');
	}
	if (uninstall) {
		install_group(group, 'uninstall');
		$('tr#' + group + ' button.install').removeAttr('disabled');
		$(this).attr('disabled', 'disabled');
	}
	$("#modal1").css('display',"none");
});

</script>
</metal:content-core>
</metal:main>
</body>
</html>