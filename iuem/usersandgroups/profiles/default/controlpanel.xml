<?xml version="1.0"?>
<object name="portal_controlpanel"
	meta_type="Plone Control Panel Tool"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
	i18n_domain="iuem.zabriproject">

 <configlet
    title="IUEM Users and Groups"
    action_id="usersandgroups"
    appId="iuem.usersandgroups"
    category="Products"
    condition_expr=""
    url_expr="string:${portal_url}/@@usersandgroups-settings"
    visible="True"
 	i18n:attributes="title">
    <permission>Manage portal</permission>
  </configlet>

 <configlet
    title="Manage LDAP IUEM Users and Groups"
    action_id="ldap_usersandgroups"
    appId="iuem.usersandgroups"
    category="plone-users"
    condition_expr=""
    url_expr="string:${portal_url}/@@manage-users"
    visible="True"
 	i18n:attributes="title">
    <permission>iuem.usersandgroups: Manage IUEM Users and Groups</permission>
  </configlet>


</object>